{
  "manifest_version": 3,
  "name": "AI Chat Summarizer",
  "version": "1.0.0",
  "description": "Summarize and export AI chat conversations from ChatGPT and similar platforms",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "aichatsummarizer@yuchdev.github.io",
      "strict_min_version": "109.0"
    }
  }
}
